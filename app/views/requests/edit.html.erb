<div class="show-post">
  <h1>Edit Request</h1>

  <%= form_for @request do |f| %>
  <div>
    Name: <%= f.text_field :name %>
  </div>
  <div>
    Email: <%= f.email_field :email %>
  </div>
  <div>
    Department:
    <%= radio_button_tag(:department, "Sales") %>
    <%= label_tag(:department_sales, "Sales") %>

    <%= radio_button_tag(:department, "Marketing") %>
    <%= label_tag(:department_marketing, "Marketing") %>

    <%= radio_button_tag(:department, "Technical") %>
    <%= label_tag(:department_technical, "Technical") %>
  </div>
  <div>
    Message: <%= f.text_area :message %>
  </div>
  Completed: <%= f.check_box :completed %>
    <%= f.submit "Save" %>
  <% end %>
</div>
